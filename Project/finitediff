close all;
clc;
clear all; 

syms h f1 f2 f3;

x = [-h ; 0 ; h];
f = [f1 ; f2 ; f3];
L = length(x);

X = sym(ones(L, 1));

for n = 2 : L
    X(:, n) = x.^(n-1);
    
end

a = X\f;

% first order finite diff 
f1 = a(2);
f1 = simplify(f1);
disp('finite difference approx of 1st order');
pretty(f1);

% scnd order finite diff 
f2 = 2*a(3);
f2 = simplify(f2);
disp('finite difference approx of 1st order');
pretty(f2);




